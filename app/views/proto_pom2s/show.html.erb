<div class="container mt-2">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <article class="panel panel-default">
        <header class="panel-heading clearfix">
          <h4>
            PO# <%= @proto_pom2.id%> -  <%= @proto_pom2.pp_vendor %>
            <small><%= @proto_pom2.created_at.strftime("%m-%d-%Y") %></small>
            <span class="badge"><%= @proto_pom2.pp_status %></span>
            <small>
              <%= link_to "Edit", edit_proto_pom2_path, class:"pull-right btn btn-default btn-sm" %>
            </small>
          </h4>
        </header>
        <section class="panel-body">
          <p>
            Dates: <%= @proto_pom2.pp_start_date %> - <%= @proto_pom2.pp_end_date %>
          </p>
          <hr>
          <a data-toggle="modal" href="#create_new_style" class="btn btn-default">Create new style in draft</a>
          <a data-toggle="modal" href="#add_existing_style" class="btn btn-default">Add existing style to draft</a>
          <hr>
          <a href="#" class="btn btn-primary btn-lg">Approve this PO</a>
        </section>
      </article>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="create_new_style" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create New Style for <%= @proto_pom2.pp_vendor %></h4>
      </div>
      <div class="modal-body">
        <p>Creating a new style for <%= @proto_pom2.pp_vendor %> in PO# <%= @proto_pom2.id %></p>
        <form>
          <fieldset class="form-group">
            <label>Brand SKU</label>
            <input class="form-control" type="text">
          </fieldset>
          <fieldset class="form-group">
            <label>Description</label>
            <input class="form-control" type="text">
          </fieldset>
          <fieldset class="form-group">
            <label>Wholesale Price</label>
            <input class="form-control" type="text">
          </fieldset>
          <fieldset class="form-group">
            <label>Size Run</label>
            <input class="form-control" type="text">
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<!-- Modal -->
<div class="modal fade" id="add_existing_style" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add Existing Style to PO# <%= @proto_pom2.id %></h4>
      </div>
      <div class="modal-body">
        <p>Search by ID or select a style from <%= @proto_pom2.pp_vendor %></p>
        <form>
          <fieldset class="form-group">
            <input class="form-control" type="text" placeholder="Search by Style ID">
            <button>Search</button>
          </fieldset>
          <fieldset class="form-group">
            <label>Select a style</label>
            <select class="form-control">
              <option>12345 - Some part of a descript...</option>
            </select>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->