<div class="container mt-2">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <article class="panel panel-default">
        <header class="panel-heading clearfix">
          <h4 class="pull-left">Create a Draft PO on <%= Time.now.strftime("%m-%d-%Y") %></h4>
          <%= link_to "Â« Cancel", root_path, class:"btn btn-link pull-right" %>
        </header>
        <section class="panel-body">
          <%= form_for(@proto_pom2) do |f| %>
            <% if @proto_pom2.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@proto_pom2.errors.count, "error") %> prohibited this proto_pom2 from being saved:</h2>

                <ul>
                  <% @proto_pom2.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row">
              <div class="form-group col-md-6">
                <label for="buyer" class="control-label">Buyer</label>
                <select class="form-control">
                  <option>Brian Cleveland</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
              <div class="form-group col-md-6">
                <label for="assistant" class="control-label">Assistant Buyer</label>
                <select class="form-control">
                  <option>Brian Cleveland</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :pp_vendor, "Vendor", class:"control-label" %><br>
              <%= f.text_field :pp_vendor, class:"form-control", :required => true %>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :pp_start_date, "Start Ship", class:"control-label" %>
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                  <%= f.text_field :pp_start_date, class:"form-control", :data => {:behaviour => "datepicker"}, :required => true  %>
                </div>
              </div>
              <div class="form-group col-md-6">
                <%= f.label :pp_end_date, "Cancel Ship", class:"control-label" %>
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                  <%= f.text_field :pp_end_date, class:"form-control", :data => {:behaviour => "datepicker"}, :required => true  %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6">
                <%= f.label :pp_arrival_date, "Expected Date", class:"control-label" %><br>
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                  <%= f.text_field :pp_arrival_date, class:"form-control", placeholder:"Optional", :data => {:behaviour => "datepicker"} %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :pp_notes, "PO Notes", class:"control-label" %><br>
              <%= f.text_field :pp_notes, class:"form-control", placeholder:"Optional" %>
            </div>
            <%= f.hidden_field :pp_status, :value => "draft" %>
            <%= f.submit %>
          <% end %>
        </section>
      </article>
    </div>
  </div>
</div>
